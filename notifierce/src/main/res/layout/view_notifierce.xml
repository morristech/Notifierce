<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notifierce_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/notifierce_vertical_padding"
    android:paddingLeft="@dimen/notifierce_horizontal_padding"
    android:paddingRight="@dimen/notifierce_horizontal_padding"
    android:paddingTop="@dimen/notifierce_vertical_padding">

    <com.icedtealabs.notifierce.RoundedImageView
        android:id="@+id/img_notifierce_icon"
        android:layout_width="@dimen/notifierce_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/notifierce_icon_size"
        android:layout_marginEnd="@dimen/notifierce_icon_margin"
        android:layout_marginRight="@dimen/notifierce_icon_margin"
        android:src="@drawable/ic_success"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notifierce_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/notifierce_title_font_size" />

        <TextView
            android:id="@+id/tv_notifierce_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="@dimen/notifierce_message_font_size" />

    </LinearLayout>

</LinearLayout>
